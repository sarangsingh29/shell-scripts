#!/bin/bash

gcc1()
{
	echo
	echo
	len=`echo $1 | wc -c`
	len=`expr $len - 3`
	object_name=`echo $1 | cut -c 1-$len`
	gcc $1 -lm -lpthread -o $object_name && ./$object_name $2
	echo
	echo
	echo
}

gpp()
{
	echo
	echo
	len=`echo $1 | wc -c`
	len=`expr $len - 5`
	object_name=`echo $1 | cut -c 1-$len`
	g++ $1 -lm -o $object_name && ./$object_name $2
	echo 
	echo
	echo
}


mpirungcc()
{
	echo 
	echo
	len=`echo $1 | wc -c`
	len=`expr $len - 3`
	object_name=`echo $1 | cut -c 1-$len`
	mpicc $1 -o $object_name && mpirun -np $2 ./$object_name	
	echo 
	echo
	echo
}


mpirungpp()
{
	echo 
	echo
	len=`echo $1 | wc -c`
	len=`expr $len - 5`
	object_name=`echo $1 | cut -c 1-$len`
	mpic++ $1 -o $object_name && mpirun -np $2 ./$object_name	
	echo 
	echo
	echo
}

gitinit()
{
	cd $1
	git remote add origin https://mashat2119@bitbucket.org/mashat2119/assrepo.git
	git pull
}

gitupload()
{
	echo 
	echo
	git add $1
	git commit -m $1
	git push -u origin master
	echo 
	echo
}
